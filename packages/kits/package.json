{
  "name": "@pando/kits",
  "version": "0.1.0",
  "description": "DAOKits for aragon / pando organizations",
  "author": "Pando Network <contact@pando.network>",
  "contributors": [
    "Olivier Sarrouy <olivier@pando.network>"
  ],
  "repository": "github:pandonetwork/pando",
  "homepage": "https://github.com/pandonetwork/pando",
  "bugs": "https://github.com/pandonetwork/pando/issues",
  "license": "(GPL-3.0-or-later OR MIT)",
  "keywords": [
    "pando",
    "vcs",
    "dao",
    "ipfs",
    "ethereum",
    "aragon"
  ],
  "scripts": {
    "test": "truffle test",
    "build:app": "parcel build app/index.html -d dist/ --public-url '.'",
    "build:script": "parcel build app/script.js -d dist/",
    "build": "npm run build:app && npm run build:script",
    "start": "aragon run",
    "devchain:start": "aragon devchain --reset > /dev/null &",
    "devchain:stop": "pkill -f 'aragon devchain' || true",
    "ipfs:start": "aragon ipfs > /dev/null &",
    "ipfs:stop": "pkill -f 'aragon ipfs' || true",
    "dev:start": "npm run devchain:start && npm run ipfs:start",
    "dev:stop": "npm run devchain:stop && npm run ipfs:stop",
    "dev:reset": "npm run dev:stop && npm run dev:start",
    "publish:rpc": "cd democracy && aragon apm publish minor DemocracyKit --init @ARAGON_ENS --environment default"
  },
  "dependencies": {
    "@aragon/apps-shared-minime": "^1.0.0",
    "@aragon/apps-token-manager": "^2.0.0",
    "@aragon/apps-voting": "^2.0.0",
    "@aragon/client": "^1.0.0-beta.8",
    "@aragon/os": "^4.0.1"
  },
  "devDependencies": {
    "parcel-bundler": "^1.8.1",
    "truffle": "4.1.14"
  }
}
