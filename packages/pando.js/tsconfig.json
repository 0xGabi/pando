{
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": "./src",
    "paths": {
      "@artifacts/*": ["../build/contracts*"],
      "@components/*": ["./components/*"],
      "@factories/*": ["./factories/*"],
      "@interfaces": ["./interfaces/index.ts"],
      "@objects/*": ["./objects/*"],
      "@root": ["./pando/index.ts"],
      "@root/*": ["./pando/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"]
    },
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "lib": ["es2017", "es2015", "dom"],
    "typeRoots": [
      "node_modules/@0xproject/typescript-typings/types",
      "node_modules/@types",
      "./src/ipando.d.ts"
    ]
  }
}
